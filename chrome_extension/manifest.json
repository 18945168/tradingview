{
  "name": "<package-name>",
  "version": "<version>",
  "manifest_version": 2,
  "description": "<description>",
  "homepage_url": "https://www.binary.com",
  "icons": {
    "16": "v<version>/browser_app_assets/binary-16x16px.png",
    "128": "v<version>/browser_app_assets/binary-128x128px.png"
  },
  "background":{
    "scripts": ["chrome_background.js"]
  },
  "browser_action": {
    "default_icon": "v<version>/browser_app_assets/binary-16x16px.png",
    "default_title": "<description>"
  },
  "permissions": [
    "cookies",
    "https://*.binary.com/*"
  ]
}